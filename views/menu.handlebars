<div class="container ">
    <div class="jumbotron coffeeMenu" style="background-color: rgba(133, 84, 36, 0.632);">
        <h1 style="text-align: center;">Quarantine Coffee Cafe</h1>
  <div class="coffeePic">
  <img src="/img/coffee1.png">
  </div>
        <br>
        <h2 style="text-align: center; padding: 5px;">Choose your drinks option</h2>
        <panel>
          
            <form class="create-form" style="text-align: center;">
                <div class="form-group" style="font-size: 20px;">
                    <label for="newLatte" style="text-align: center;">Choose your Drink Option</label>
                    {{!-- <input type="text" id="newLatte" name="latte"> --}}
                    
                    <select data-placeholder="" id="newLatte" name="latte" onchange="myFunction(this.value)">
                        <option value="Nothing Selected" disabled selected></option>
                        <option value="Caffe Americano">Caffe Americano</option>
                        <option value="Blonde Caffè Latte">Blonde Caffe</option>
                        <option value="Caffè Latte">Caffe</option>
                        <option value="Chai Tea Latte">Chai Tea</option>
                        <option value="Cinnamon Dolce Latte">Cinnamon Dolce</option>
                        <option value="Coconutmilk Cascara Latte">Coconut milk Cascara</option>
                        <option value="London Fog Tea Latte">London Fog Tea</option>
                        <option value="Matcha Green Tea Latte">Matcha Green Tea</option>
                        <option value="Royal English Breakfast Tea Latte">Royal English Breakfast Tea</option>
                        <option value="Almond Mocha Latte">Almond Mocha Latte</option>
                        <option value="Kreme De Kona Latte">Kreme De Kona Latte</option>
                        <option value="Nutty Irishman Latte">Nutty Irishman Latte</option>
                        <option value="Caramel Vanilla Latte">Caramel Vanilla Latte</option>
                        <option value="Snickers Latte">Snickers Latte</option>
                    </select>
                </div>
                <div class="addCoffee" style="text-align: center;">
                <button type="submit" class="btn btn-success" id="addLatte" style="text-align: center; font-size:30px;">
                        <span class="fa fa-shopping-basket"></span>
                 </button>
<div class="picCoffee"></div>

            </form>
        </panel>
    </div>


</div>

    <!--  -->
    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="leftside"><strong>Check below for your order!</strong>
                    {{!-- <p>Latte is Ready!</p> --}}
                </div>
                <div class="panel-body">

                    <ul>
                        {{#each lattes}}
                        {{#unless drank}}

                        <span><strong> {{this.drink_name}}</strong></span>
                        <button type="button" class="drinkLatte btn btn-warning" id="drinkButton" data-id="{{this.id}}"
                            data-newDrank="{{drank}}"><span class="fa fa-usd"></span></button>
                        <hr>
                        {{/unless}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading" id="rightside"><strong>Drink is Ready!</strong>
                    <p>Please take your Drink!</p>
                </div>
                <div class="panel-body">
                    <ul>
                        {{#each lattes}}
                        {{#if drank}}
                        <span><strong> {{this.drink_name}}</strong></span>
                        <button type="button" class="trashLatte btn btn-info" id="trashbutton" data-id="{{this.id}}"
                            data-newDrank="{{drank}}"><span class="fa fa-coffee"></span></button>
                        <hr>
                        {{/if}}
                        {{/each}}
                    </ul>

                </div>
            </div>
        </div>

    </div>
